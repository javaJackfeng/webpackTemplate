{
  "compilerOptions": {
      "outDir": "./dist/",
      "noEmit": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "esModuleInterop": true,
      "baseUrl": "./src",
      "paths": {
          "@src/*": ["*"],
          "@utils/*": ["utils/*"],
          "@components/*": ["components/*"],
          "@pages/*": ["pages/*"],
          "@service/*": ["service/*"]
      }
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "./build/**/*",
      "node_modules",
      "dist"
  ]
}